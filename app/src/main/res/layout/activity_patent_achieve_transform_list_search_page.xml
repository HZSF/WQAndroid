<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    tools:context="com.weiping.InteProperty.patent.activity.PatentAchieveTransformListSearchPageActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/btn_patent_AT_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="@string/lbl_cancel"
            android:onClick="onClickPatentATCancelSearch"/>
        <EditText
            android:id="@+id/et_patent_achieve_transform_input_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/btn_patent_AT_cancel"
            android:hint="@string/txt_hint_search"
            android:background="@drawable/edittextwithoutborder"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <ListView
        android:id="@+id/list_view_patent_achieve_transform_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="#f5f5f5"
        android:dividerHeight="4px">
    </ListView>

</LinearLayout>
