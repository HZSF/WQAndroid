<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    tools:context="com.weiping.servicecentre.finance.activity.QualityServiceActivity">

    <ImageView
        android:id="@+id/cs_quality_center_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"/>

    <LinearLayout
        android:id="@+id/quality_ll_wood"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cs_quality_center_image"
        android:layout_marginTop="32dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:onClick="onClickListenerWoodInspection"
        android:weightSum="10">
        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"></View>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_gravity="center_vertical"
            android:src="@drawable/btn_icon_cs_quality_wood_inspection"
            android:adjustViewBounds="true"/>
        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.6"></View>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6.5"
            android:text="@string/title_activity_wood_inspection"
            android:gravity="center_vertical"
            android:textSize="20sp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:layout_gravity="center_vertical"
            android:src="@drawable/btn_icon_arrow"
            android:adjustViewBounds="true"/>
        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"></View>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/quality_ll_kids"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/quality_ll_wood"
        android:layout_marginTop="32dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:onClick="onClickListenerKidsWearInspection"
        android:weightSum="10">
        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"></View>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_gravity="center_vertical"
            android:src="@drawable/btn_icon_cs_quality_kidswear_inspection"
            android:adjustViewBounds="true"/>
        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.6"></View>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6.5"
            android:text="@string/title_activity_kids_wear_inspection"
            android:gravity="center_vertical"
            android:textSize="20sp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:layout_gravity="center_vertical"
            android:src="@drawable/btn_icon_arrow"
            android:adjustViewBounds="true"/>
        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"></View>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/quality_ll_kids"
        android:layout_marginTop="32dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:onClick="onClickListenerTextileInspection"
        android:weightSum="10">
        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"></View>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_gravity="center_vertical"
            android:src="@drawable/btn_icon_cs_quality_textile_inspection"
            android:adjustViewBounds="true"/>
        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.6"></View>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6.5"
            android:text="@string/title_activity_textile_inspection"
            android:gravity="center_vertical"
            android:textSize="20sp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:layout_gravity="center_vertical"
            android:src="@drawable/btn_icon_arrow"
            android:adjustViewBounds="true"/>
        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"></View>
    </LinearLayout>

</RelativeLayout>
