<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#dfffff">
            <TextView
                android:id="@+id/textView_patent_annual_fee_monitor_patent_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:textSize="15sp"/>
            <!--
            <CheckBox
                android:id="@id/check_patent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"/>
                -->
        </RelativeLayout>
        <TextView
            android:id="@+id/textView_patent_annual_fee_monitor_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:singleLine="false"
            android:layout_alignParentLeft="true"
            android:textColor="#0a7dca"
            android:textSize="15sp"/>
        <TextView
            android:id="@+id/textView_patent_annual_fee_monitor_applicant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:singleLine="false"
            android:layout_alignParentLeft="true"
            android:textSize="15sp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
            <TextView
                android:id="@+id/textView_patent_annual_fee_monitor_apply_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/textView_patent_annual_fee_monitor_expire_date"
                android:textSize="15sp"/>
            <TextView
                android:id="@id/textView_patent_annual_fee_monitor_expire_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_toLeftOf="@+id/textView_patent_annual_fee_monitor_expire_status"
                android:textSize="15sp"/>
            <TextView
                android:id="@id/textView_patent_annual_fee_monitor_expire_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_alignBottom="@id/textView_patent_annual_fee_monitor_expire_date"
                android:layout_alignParentRight="true"
                android:textSize="10sp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView_patent_annual_fee_monitor_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_alignParentLeft="true"
                android:text="年费金额："
                android:textSize="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_toLeftOf="@+id/btn_patent_ann_fee_monitor_apply"
                android:text="缴费情况:"
                android:textSize="15sp"/>
            <TextView
                android:id="@id/btn_patent_ann_fee_monitor_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/textView_patent_annual_fee_monitor_amount"
                android:layout_alignBottom="@id/textView_patent_annual_fee_monitor_amount"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:clickable="true"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
