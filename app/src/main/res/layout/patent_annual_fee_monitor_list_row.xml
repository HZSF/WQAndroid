<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="#ffffff">

    <TextView
        android:id="@+id/textView_patent_annual_fee_monitor_patent_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_alignParentLeft="true"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/textView_patent_annual_fee_monitor_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:singleLine="false"
        android:layout_alignParentLeft="true"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/textView_patent_annual_fee_monitor_apply_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_alignParentLeft="true"
        android:textSize="10sp"/>
    <TextView
        android:id="@+id/textView_patent_annual_fee_monitor_expire_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_alignParentLeft="true"
        android:textSize="10sp"/>
    <TextView
        android:id="@+id/textView_patent_annual_fee_monitor_expire_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_alignParentLeft="true"
        android:textSize="10sp"/>
    <TextView
        android:id="@+id/textView_patent_annual_fee_monitor_payment_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_alignParentLeft="true"
        android:textSize="10sp"/>


</LinearLayout>