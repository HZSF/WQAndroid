<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.weiping.credential.activity.MemberAgreementActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_member_agreement_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18sp"
                android:text="@string/register_agreement_title"/>
            <TextView
                android:id="@+id/txt_member_agreement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_member_agreement_title"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_member_agreement"
                android:weightSum="2"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_agreement_cancel"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="0.8"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_login"
                    android:text="@string/lbl_cancel"
                    android:textColor="#ffffff"
                    android:onClick="onClickCancelAgreement"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"/>
                <Button
                    android:id="@+id/btn_agreement_agree"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="0.8"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_login"
                    android:text="@string/lbl_agree"
                    android:textColor="#ffffff"
                    android:onClick="onClickAgreeAgreement"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
