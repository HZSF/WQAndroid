<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">
    <ImageView
        android:id="@+id/drawer_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_alignTop="@+id/drawer_item_text"
        android:layout_alignBottom="@id/drawer_item_text"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@id/drawer_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/drawer_item_icon"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/drawer_item_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/drawer_item_text"
        android:layout_toLeftOf="@+id/drawer_item_arrow"
        android:background="@drawable/red_dot"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"/>
    <ImageView
        android:id="@id/drawer_item_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_right_arrow"/>
</RelativeLayout>