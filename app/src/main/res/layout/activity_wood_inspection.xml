<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.weiping.servicecentre.quality.wood.activity.WoodInspectionActivity">

    <ImageView
        android:id="@+id/cs_quality_wood_image"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_gravity="top"
        android:scaleType="fitStart"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textSize="22sp"
        android:text="@string/cs_quality_wood_txt"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/appointment_now"
        android:onClick="onClickListenerAppointWoodInspection"/>


</LinearLayout>
