<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#0a7dca"
    android:orientation="horizontal">
<!--android:background="#e00a00"-->

    <LinearLayout
        android:id="@+id/linearLayout_actionbar_back"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/ic_back_holo_dark"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView_screen_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6.5"
        android:gravity="center"
        android:textSize="22sp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="#ffffff"/>

    <LinearLayout
        android:id="@+id/ll_settings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:clickable="true">
        <TextView
            android:id="@+id/textView_settings_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/textView_settings_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:textColor="#ffffff"/>
    </LinearLayout>

</LinearLayout>