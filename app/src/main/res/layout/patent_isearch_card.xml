<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="1dp"
    card_view:cardBackgroundColor="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_patent_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:singleLine="false"
            android:textColor="#000000"
            android:textSize="15sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_patent_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">
            </LinearLayout>
            <TextView
                android:id="@+id/patent_isearch_ann_fee_monitor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn3"
                android:paddingTop="3dp"
                android:paddingLeft="5dp"
                android:paddingBottom="3dp"
                android:paddingRight="5dp"
                android:clickable="true"
                android:textColor="#ffffff"
                android:text="年费监测"
                android:textSize="12sp"/>
            <View
                android:layout_width="5dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/patent_isearch_transform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn4"
                android:paddingTop="3dp"
                android:paddingLeft="5dp"
                android:paddingBottom="3dp"
                android:paddingRight="5dp"
                android:clickable="true"
                android:textColor="#ffffff"
                android:text="成果转化"
                android:textSize="12sp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e2e2e2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#938f8f"
                android:textSize="13sp"
                android:text="申请人："
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/txt_patent_applicant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#938f8f"
                android:textSize="13sp"
                android:clickable="true" />
        </LinearLayout>
        <TextView
            android:id="@+id/txt_patent_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="5"
            android:singleLine="false"
            android:textColor="#938f8f"
            android:textSize="13sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e2e2e2"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_patent_apply_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_alignParentLeft="true"
                android:textColor="#bfc0c1"
                android:textSize="12sp"/>
            <ImageView
                android:id="@+id/pisearch_right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/txt_patent_apply_date"
                android:layout_alignBottom="@id/txt_patent_apply_date"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_arrow_r"/>
            <TextView
                android:id="@+id/patent_isearch_read_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:paddingLeft="5dp"
                android:paddingBottom="3dp"
                android:paddingRight="5dp"
                android:layout_toLeftOf="@id/pisearch_right_arrow"
                android:background="@drawable/btn6"
                android:clickable="true"
                android:textColor="#ffffff"
                android:text="阅读全文"
                android:textSize="12sp"/>
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>