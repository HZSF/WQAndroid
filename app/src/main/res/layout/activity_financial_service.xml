<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f5f5f5"
    tools:context="com.weiping.servicecentre.finance.activity.FinancialServiceActivity">

    <ImageView
        android:id="@+id/cs_finance_center_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        android:src="@drawable/cs_financial_center_top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignTop="@id/cs_finance_center_image"
        android:layout_alignBottom="@id/cs_finance_center_image">
        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/cs_finance_center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/finance_ll_loan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cs_finance_center_image"
        android:layout_marginTop="32dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:onClick="onClickListenerCreditLoan"
        android:weightSum="10">
        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"></View>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_gravity="center_vertical"
            android:src="@drawable/btn_icon_cs_finance_credit_loan"
            android:adjustViewBounds="true"/>
        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.6"></View>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6.5"
            android:text="@string/title_activity_credit_loan"
            android:gravity="center_vertical"
            android:textSize="20sp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:layout_gravity="center_vertical"
            android:src="@drawable/btn_icon_arrow"
            android:adjustViewBounds="true"/>
        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"></View>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/finance_ll_lend"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/finance_ll_loan"
        android:layout_marginTop="32dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:onClick="onClickListenerEnlending"
        android:weightSum="10">
        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"></View>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_gravity="center_vertical"
            android:src="@drawable/btn_icon_cs_finance_lending"
            android:adjustViewBounds="true"/>
        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.6"></View>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6.5"
            android:text="@string/title_activity_enlending"
            android:gravity="center_vertical"
            android:textSize="20sp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:layout_gravity="center_vertical"
            android:src="@drawable/btn_icon_arrow"
            android:adjustViewBounds="true"/>
        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"></View>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/finance_ll_lend"
        android:layout_marginTop="32dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:onClick="onClickListenerOtherFinance"
        android:weightSum="10">
        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"></View>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:layout_gravity="center_vertical"
            android:src="@drawable/btn_icon_cs_finance_other_finance"
            android:adjustViewBounds="true"/>
        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.6"></View>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6.5"
            android:text="@string/title_activity_other_finance"
            android:gravity="center_vertical"
            android:textSize="20sp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:layout_gravity="center_vertical"
            android:src="@drawable/btn_icon_arrow"
            android:adjustViewBounds="true"/>
        <View
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"></View>
    </LinearLayout>

</RelativeLayout>
