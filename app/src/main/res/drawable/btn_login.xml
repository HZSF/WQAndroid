<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#068cf5" />
            <gradient android:angle="-90" android:startColor="#1093c9" android:endColor="#019bca"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#068cf5" />
            <solid android:color="#0085c9"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#068cf5" />
            <gradient android:angle="-90" android:startColor="#35baef" android:endColor="#0085c9" />
        </shape>
    </item>
</selector>